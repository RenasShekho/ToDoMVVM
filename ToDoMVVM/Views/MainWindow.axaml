<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:ToDoMVVM.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ToDoMVVM.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="ToDoMVVM">

	<StackPanel>

    <TextBlock Text="{Binding labelUserName}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
	
		<TextBox Text="{Binding UserName}" Width="200" Height="50" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBox>

		<TextBlock Text="{Binding labelPassword}" HorizontalAlignment="Center" VerticalAlignment="Center"/>

		<TextBox Text="{Binding Password}" Width="200" Height="50" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBox>
	</StackPanel>
		</Window>
